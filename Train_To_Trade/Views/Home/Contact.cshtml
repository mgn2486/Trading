@model Train_To_Trade.Models.contactUsModel
@{
    ViewBag.Title = "Contact";
}

<h3>Contact Us.</h3>
<h4>For more information please do not hesitate to contact us or send us a message.</h4>

<div class="row col-lg-12 ">
    <hr />
</div>
<div class="row col-lg-12">
    <div class="col-lg-8 col-md-8 col-xs-12 outset">
        <div class="row col-xs-12">
            <p>Please kindly complete the following form with your details and we will get back to you as soon as possible</p>
        </div>
        <h4></h4>


        <div class="row col-xs-12 container">
            <form method="post">
                <input name="__RequestVerificationToken" type="hidden" value="" />

                <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
                    <ul>
                        <li style="display:none"></li>
                    </ul>
                </div>

                <div id="contactMessage" class="col-xs-12">
                    <p class="text-success">@ViewBag.contactMessage </p>
                    <p class="text-danger">@ViewBag.contactErrorMessage </p>
                </div>


                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <label class="col-form-label" for="fullName">Full name.: *</label>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            @Html.TextBoxFor(m => m.fullName, new { @class = "form-control", @placeholder = "First name" })
                            <p style="color: red;">@Html.ValidationMessageFor(model => model.fullName)</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <label class="col-form-label" for="emailaddress">Email.: *</label>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            @Html.TextBoxFor(m => m.emailaddress, new { @class = "form-control", @placeholder = "Email Address" })
                            <p style="color: red;">@Html.ValidationMessageFor(model => model.emailaddress)</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <label class="col-form-label" for="emailaddress">Contact No.:</label>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            @Html.TextBoxFor(m => m.contactNumber, new { @class = "form-control", @placeholder = "Please enter your message here" })
                            <p style="color: red;">@Html.ValidationMessageFor(model => model.contactNumber)</p>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <label class="col-form-label" for="Message">Message</label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @placeholder = "Please enter your contact number" })
                                <p style="color: red;">@Html.ValidationMessageFor(model => model.Message)</p>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-4 col-md-9">
                            <input type="submit" class="btn btn-primary" value="Send Message" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!--Contact details-->

    <div class="col-lg-4 col-md-4 col-xs-12">


        <address>
            <strong><b>Contact No.</b></strong><br /><br />
            <strong>+27 (0) 78 253 9442</strong><br />
            <strong>+27 (0) 31 261 1907</strong><br />
            <strong>+27 (0) 31 829 9137</strong>
        </address>

        <address>
            <strong>Support:</strong>   <a href="#">info@traintotrade.co.za</a><br />
            <strong>Marketing:</strong> <a href="#">sihambat@advancedsa.co.za</a>
        </address>
    </div>
</div>
